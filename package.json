{
  "name": "anna",
  "version": "1.0.1",
  "description": "ANNA - Voice Dictation for macOS",
  "main": "./out/main/index.js",
  "author": "Bryce Choquer",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "rebuild": "npx @electron/rebuild -f -w better-sqlite3",
    "build:fn-helper": "bash scripts/build-fn-helper.sh",
    "build:accessibility-probe": "bash scripts/build-accessibility-probe.sh",
    "build:natives": "npm run build:fn-helper && npm run build:accessibility-probe",
    "build:mac": "npm run build:natives && electron-vite build && electron-builder --mac --config",
    "build:mac:signed": "npm run build:natives && electron-vite build && electron-builder --mac --config",
    "convex:dev": "npx convex dev",
    "convex:deploy": "npx convex deploy"
  },
  "build": {
    "appId": "com.anna.dictation",
    "productName": "Anna",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "identity": "Bryce Choquer (VAC2837QGB)",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "Anna",
      "iconSize": 100,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "Choquer-agency",
      "repo": "ANNA",
      "private": true
    },
    "afterSign": "scripts/notarize.js",
    "extraResources": [
      {
        "from": "resources/fn-key-helper",
        "to": "fn-key-helper"
      },
      {
        "from": "resources/accessibility-probe",
        "to": "accessibility-probe"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@auth/core": "^0.37.4",
    "@convex-dev/auth": "^0.0.90",
    "@fugood/whisper.node": "^1.0.16",
    "active-win": "^8.1.0",
    "better-sqlite3": "^11.0.0",
    "convex": "^1.31.7",
    "dotenv": "^16.4.0",
    "electron-updater": "^6.8.3",
    "langfuse": "^3.38.6",
    "lucide-react": "^0.574.0",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^4.0.0",
    "@electron/notarize": "^3.1.1",
    "@electron/rebuild": "^3.7.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "electron": "^33.4.11",
    "electron-builder": "^26.8.1",
    "electron-vite": "^5.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0"
  }
}
